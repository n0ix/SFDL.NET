<Controls:MetroWindow
        x:Class="SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SFDL.NET3"
        xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
        mc:Ignorable="d" Height="922.255" Width="775.843" SizeToContent="WidthAndHeight" ResizeMode="NoResize" WindowStartupLocation="CenterOwner" IsMaxRestoreButtonEnabled="False">
    <Grid>
        <StackPanel Orientation="Horizontal" >
            <StackPanel>
                <GroupBox x:Name="groupBox_general_Settings" Header="Allgemeine Einstellungen">
                    <Grid>
                        <StackPanel Orientation="Horizontal">
                            <StackPanel>
                                <CheckBox x:Name="chk_block_standby" Content="Standby blockieren" HorizontalAlignment="Left" Margin="5,5,5,0" VerticalAlignment="Top"/>
                                <CheckBox x:Name="chk_minimize_to_tray" Content="Ins Tray minimieren" HorizontalAlignment="Left" Margin="5,5,5,0" VerticalAlignment="Top"/>
                                <CheckBox x:Name="chk_clicknload" Content="Click'n'Load aktivieren" HorizontalAlignment="Left" Margin="5,5,5,0" VerticalAlignment="Top"/>
                            </StackPanel>
                            <StackPanel>
                                <CheckBox x:Name="chk_instant_video" Content="Instant Video aktivieren" HorizontalAlignment="Left" Margin="5,10,5,0" VerticalAlignment="Top"/>
                                <CheckBox x:Name="chk_search_updates" Content="Nach Updates suchen" HorizontalAlignment="Left" Margin="5,5,5,0" VerticalAlignment="Top"/>
                                <ComboBox x:Name="comB_language" Width="147" Controls:TextBoxHelper.UseFloatingWatermark="True" Margin="5,5,5,0" Controls:TextBoxHelper.Watermark="Sprache wählen">
                                    <ComboBoxItem Content="Deutsch"/>
                                    <ComboBoxItem Content="English"/>
                                </ComboBox>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </GroupBox>
                <GroupBox x:Name="groupBox_DownloadSettings" Header="Download Einstellungen">
                    <Grid>
                        <StackPanel Orientation="Horizontal" >

                            <StackPanel >
                                <TextBox x:Name="txt_download_path" HorizontalAlignment="Left" Height="23" Margin="5,5,0,0" TextWrapping="Wrap" Width="248" Controls:TextBoxHelper.UseFloatingWatermark="True" Controls:TextBoxHelper.Watermark="Download Verzeichnis"/>
                                <CheckBox Content="Unterordner pro Download erstellen" Margin="5,5,0,0"></CheckBox>
                                <RadioButton Content="SFDL Dateiname verwenden" Margin="30,5,0,0" GroupName="DownloadDir"/>
                                <RadioButton Content="SFDL Beschreibung verwenden" Margin="30,5,0,0" GroupName="DownloadDir"/>
                                <CheckBox Content="Unterordner pro Paket erstellen" Margin="5,5,0,5"></CheckBox>
                            </StackPanel>
                            <StackPanel >
                                <Button x:Name="cmd_search_download_path" Content="Durchsuchen" Width="108" Margin="5,5,0,0"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </GroupBox>
                <GroupBox x:Name="groupBox_UnrarSettings" Header="UnRAR Einstellungen">
                    <Grid>
                        <StackPanel Orientation="Horizontal" >
                            <StackPanel>
                                <CheckBox Content="Archive nach dem Download Automatisch entpacken" Margin="5,5,0,0"></CheckBox>
                                <CheckBox Content="Archive nach erfolgreichem Entpacken löschen" Margin="5,5,0,0"></CheckBox>
                                <CheckBox Content="Kennwortliste zum Entpacken verwenden" Margin="5,5,0,0"></CheckBox>
                                <Separator Margin="5,10,5,5"/>
                                <Label Content="Kennwortliste:" ></Label>
                                <StackPanel Orientation="Horizontal" >
                                    <ListBox x:Name="listBox_unrar_passwords" Height="100" Width="298" BorderThickness="1"/>
                                    <StackPanel >
                                        <Button Width="24" Height="24" Content="+" Margin="5,5,5,0"></Button>
                                        <Button Width="24" Height="24" Content="-" Margin="5,5,5,0"></Button>
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </GroupBox>
                <GroupBox Header="Remote Control">
                    <StackPanel >
                        <CheckBox Content="Remote Control aktivieren" Margin="5"></CheckBox>
                        <StackPanel Orientation="Horizontal" >
                            <Label Content="IP Adresse:"></Label>
                            <TextBox Width="141"></TextBox>
                            <Label Content="Port:" ></Label>
                            <Controls:NumericUpDown Maximum="65000" Minimum="1" Value="9090" Width="112" Margin="5,0"/>
                        </StackPanel>
                        <Separator Margin="0,10,0,5">
                            
                        </Separator>
                        <Label Content="API Keys" ></Label>
                        <StackPanel Orientation="Horizontal" >
                            <ListBox x:Name="listBox_api_keys" Height="100" Width="298" BorderThickness="1" Margin="0,0,0,5"/>
                            <StackPanel >
                                <Button Width="24" Height="24" Content="+" Margin="5,5,5,0"></Button>
                                <Button Width="24" Height="24" Content="-" Margin="5,5,5,0"></Button>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>
                <Button Content="Einstellungen Speichern" Margin="10,15,10,10">
                </Button>
            </StackPanel>
            <StackPanel>
                <GroupBox x:Name="groupBox_AdvancedSettings" Header="Erweiterte Einstellungen" Margin="5">
                    <Grid>
                        <StackPanel Orientation="Horizontal">
                            <StackPanel >
                                <CheckBox Content="Alle Dateien im Container makrieren" Margin="5,5,5,0"></CheckBox>
                                <CheckBox Content="SFDL Datei nach dem öffnen löschen" Margin="5,5,5,0"></CheckBox>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </GroupBox>
                <GroupBox x:Name="groupBox_AdvancedDownloadSettings" Header="Erweiterte Download Einstellungen" Height="169">
                    <Grid>
                        <StackPanel Orientation="Horizontal">
                            <StackPanel >
                                <Label Content="Existierende Datei:" Margin="5,5,5,0"></Label>
                                <Label Content="Maximale Threads:" Margin="5,5,5,0"></Label>
                                <Label Content="Maximale Retries:" Margin="5,5,5,0"></Label>
                                <Label Content="Wartezeit zwischen Retries:" Margin="5,5,5,0"></Label>
                            </StackPanel>
                            <StackPanel>
                                <ComboBox x:Name="comB_file_handling" Width="147" Controls:TextBoxHelper.UseFloatingWatermark="True" Margin="5,5,5,0" Controls:TextBoxHelper.Watermark="Existierende Datei">
                                    <ComboBoxItem Content="Fortsetzen"/>
                                    <ComboBoxItem Content="Überschreiben"/>
                                </ComboBox>
                                <Controls:NumericUpDown Maximum="100" Minimum="1" Value="1" Width="147" Margin="5,5,5,0"/>
                                <Controls:NumericUpDown Maximum="100" Minimum="1" Value="1" Width="147" Margin="5,5,5,0"/>
                                <Controls:NumericUpDown Maximum="120" Minimum="1" Value="1" Width="147" Margin="5,5,5,0"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </GroupBox>
                <GroupBox Header="Speedreport Einstellungen" >
                    <Grid>
                        <StackPanel >
                            <RadioButton Content="Speedreport nach dem Download anzeigen" Margin="5,5,0,0" GroupName="Speedreport"></RadioButton>
                            <RadioButton Content="Speedreport in Datei schreiben" Margin="5,5,0,0" GroupName="Speedreport"></RadioButton>
                            <RadioButton Content="Speedreport nicht anzeigen" Margin="5,5,0,5" GroupName="Speedreport"></RadioButton>
                            <Separator Margin="5" ></Separator>
                            <TextBox Controls:TextBoxHelper.UseFloatingWatermark="True" Controls:TextBoxHelper.Watermark="Benutzername" Margin="5,5,0,0"/>
                            <TextBox Controls:TextBoxHelper.UseFloatingWatermark="True" Controls:TextBoxHelper.Watermark="Verbindung" Margin="5,5,0,0"/>
                            <TextBox Controls:TextBoxHelper.UseFloatingWatermark="True" Controls:TextBoxHelper.Watermark="Kommentar" Margin="5,5,0,5"/>
                            <Separator Margin="5" ></Separator>
                            <ToolBar>
                                <MenuItem Header="Variablen">
                                    <MenuItem Header="Benutzername"/>
                                    <MenuItem Header="Verbindung"/>
                                    <MenuItem Header="Kommentar"/>
                                    <MenuItem Header="Download Geschwindigkeit"/>
                                    <MenuItem Header="SFDL Informationen">
                                        <MenuItem Header="Beschreibung"/>
                                        <MenuItem Header="Upper"/>
                                        <MenuItem Header="Gesamtdownloadgröße"/>
                                    </MenuItem>
                                    <MenuItem Header="Benötigte Downloadzeit"/>
                                </MenuItem>
                            </ToolBar>
                            <RichTextBox BorderThickness="1" Height="123" />
                        </StackPanel>
                    </Grid>
                </GroupBox>
            </StackPanel>
        </StackPanel>

    </Grid>
</Controls:MetroWindow>
